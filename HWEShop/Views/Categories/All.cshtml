@model IEnumerable<HWEShop.Models.EntityFramework.Products>

@{
    ViewBag.Title = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb lighten-4">
        <li class="breadcrumb-item" style="margin-left: 5%"><a style="color: black" href="/">HOME</a></li>
        <li class="breadcrumb-item"><a style="color: black">ALL</a></li>
    </ol>
</nav>

<br />
<div class="card-deck">

    @foreach (var item in Model)
    {
        <div class="card" style="width: 50rem;">
            <a href="/Products/Details/@item.ProductId">
                <img class="bd-placeholder-img card-img-top" width="100" height="370" src="@item.ProductImage" />
            </a>

            <div class="card-body">
                <h5 class="card-title" style="text-align: center">@Html.DisplayFor(modelItem => item.ProductName)</h5>
                <br />
                <p class="card-text">Quick sample text to create the card title and make up the body of the card's content.</p>

                <hr />

                <p>
                    @if (item.ProductStock > 0)
                    {
                        <strong style="margin-left: 35%;"> PRICE: @item.ProductPrice £</strong>
                    }
                    else
                    {
                        <strong style="color:red; margin-left: 32%;"> OUT OF STOCK</strong>
                    }
                </p>

                </div>
        </div>
    }
</div>

